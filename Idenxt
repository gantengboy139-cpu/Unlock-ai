  </div>  <script>
    const chat = document.getElementById('chat');
    const input = document.getElementById('input');

    function addMessage(text, sender) {
      const div = document.createElement('div');
      div.className = sender === 'user'
        ? 'text-right'
        : 'text-left';
      div.innerHTML = `<span class="inline-block px-3 py-2 rounded-lg ${sender === 'user' ? 'bg-blue-500' : 'bg-slate-600'}">${text}</span>`;
      chat.appendChild(div);
      chat.scrollTop = chat.scrollHeight;
    }

    function aiReply(message) {
      message = message.toLowerCase();
      if (message.includes('halo')) return 'Halo! Saya EWn AI ðŸ‘‹';
      if (message.includes('nama')) return 'Nama saya EWn AI.';
      if (message.includes('apa kabar')) return 'Saya baik, terima kasih!';
      if (message.includes('buat web')) return 'Saya bisa membantu membuat website.';
      return 'Maaf, saya masih AI sederhana ðŸ¤–';
    }

    function sendMessage() {
      const text = input.value.trim();
      if (!text) return;

      addMessage(text, 'user');
      input.value = '';

      setTimeout(() => {
        const reply = aiReply(text);
        addMessage(reply, 'ai');
